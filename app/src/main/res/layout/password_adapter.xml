<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

  <LinearLayout
      android:id="@+id/l_name_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible">

    <TextView
        android:id="@+id/tv_name_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Name Password"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_name_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"></EditText>


  </LinearLayout>

  <LinearLayout
      android:id="@+id/l_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible">

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Password"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"></EditText>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/l_new_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible">

    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="New Password"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"></EditText>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/l_ver_new_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible">

    <TextView
        android:id="@+id/tv_ver_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ver Password"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_ver_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"></EditText>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/l_unic_password"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible">

    <TextView
        android:id="@+id/tv_unic_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Unic Password"
        android:textAlignment="center"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/et_unic_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:inputType="text"></EditText>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/l_action_password"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:visibility="visible">

    <Button
        android:id="@+id/bAdd"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:insetLeft="10dp"
        android:insetRight="10dp"
        android:text="Send"></Button>

    <Button
        android:id="@+id/bCansel"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:insetLeft="10dp"
        android:insetRight="10dp"
        android:text="Cansel"></Button>
  </LinearLayout>

</LinearLayout>